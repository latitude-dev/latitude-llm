DATABASE_URL=postgres://latitude:secret@localhost:5432/latitude_development
PG_POOL_MAX=20
PG_IDLE_TIMEOUT_MS=30000
PG_CONNECT_TIMEOUT_MS=10000

CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_MIGRATION_URL=clickhouse://localhost:9000
CLICKHOUSE_USER=latitude
CLICKHOUSE_PASSWORD=secret
CLICKHOUSE_DB=latitude_development
CLICKHOUSE_CLUSTER_ENABLED=false

REDIS_HOST=localhost
REDIS_PORT=6379

WEB_PORT=3000
API_PORT=3001
INGEST_PORT=3002

# Better Auth (required for Magic Link)
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3001

# Email Configuration (choose one):

# Option 1: Mailpit (local development - default)
MAILPIT_HOST=localhost
MAILPIT_PORT=1025
MAILPIT_FROM=noreply@latitude.local

# Option 2: SMTP (e.g., SendGrid, AWS SES)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
# SMTP_FROM=noreply@yourdomain.com

# Option 3: SendGrid API
# SENDGRID_API_KEY=SG.xxx
# SENDGRID_FROM=noreply@yourdomain.com

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
