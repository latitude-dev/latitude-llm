{
  "extends": "@latitude-data/typescript-config/base.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "$/*": ["./src/*"],
      "acorn": ["node_modules/@latitude-data/typescript-config/types/acorn"]
    },
    "types": ["node"],
    "jsx": "preserve"
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
