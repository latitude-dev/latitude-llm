{
  "extends": "@latitude-data/typescript-config/base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "$/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.test.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/workers",
    ".next"
  ]
}
