{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/types/.tsbuildinfo",
    "outDir": "./dist/types",
    "rootDir": "./src",
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.spec.*",
    "src/tests/**",
    "src/**/__tests__/**",
    "src/**/testHelper.ts",
    "src/**/testHelpers/**",
    "**/*.js"
  ]
}
