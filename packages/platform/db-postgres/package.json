{
  "name": "@platform/db-postgres",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "pg:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "pg:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "pg:check": "drizzle-kit check --config=drizzle.config.ts",
    "pg:studio": "drizzle-kit studio --config=drizzle.config.ts --port 3003",
    "lint": "biome check src",
    "format": "biome format --write src",
    "format:check": "biome format --check src",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "drizzle-orm": "catalog:",
    "pg": "catalog:"
  },
  "devDependencies": {
    "@types/pg": "catalog:",
    "dotenv": "catalog:",
    "drizzle-kit": "catalog:"
  }
}
